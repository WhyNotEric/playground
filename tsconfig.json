{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "outDir": "out",
    "rootDir": ".",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["packages/website/empty.ts"], // TODO (eric) remove this empty file
  "exclude": ["out", "node_modules", "**/node_modules/*"]
}