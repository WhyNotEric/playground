{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./out",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./scripts",
    "./tasks",
    "./test",
    "./typechain",
    "./typechain-types",
    "./hardhat.config.ts",
    ".eslintrc.js"
  ],
  "exclude": [
    "../../node_modules/",
    "./node_modules",
    "./out",
    "**/node_modules/*"
  ]
}